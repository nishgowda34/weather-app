html
  head
    title Weather application
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="http://maps.google.com/maps/api/js?sensor=true")
    script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places")
    script(src='static/js/weather.js')
    link(rel="stylesheet" type="text/css" href='static/css/wa.css')
    
  body(id="body")
    header
      h1 Weather application
      br
      br
    div(id="lat" hidden="hidden")
    div(id="long" hidden="hidden")
    div(id="map")
    div(id="style")
      strong Location
      input(id = "location" class = "controls" type = "text" placeHolder = "Enter a location")
      br
      br
      strong select the unit:
      br
      br
      form(id = "form")
        strong    Celcius
        input(type = "radio" id = "metric" value = "metric value" name = "unit" checked = "checked")
        br
        strong Fahrenheit
        input(type = "radio" id = "imperial" value = "imperial value" name = "unit")
        br
        br
      strong select number of days
      select(id = "days")
        option(value = "1") 1
        option(value = "2") 2
        option(value = "3") 3
        option(value = "4") 4
        option(value = "5") 5
      br
      br
      button(id = "submit" onclick = "weatherData()") submit
      br
      br
    div(id = "feature")
    div(id = "featureI")
